<script src="/socket.io/socket.io.js"></script>
<script src="/play.js"></script>

<div class="row">
    <div class="col-sm-1 ml-auto"></div>

    <div class="col-sm-6 ml-auto">
        <div class="card text-center text-white bg-dark mb-3 w-100">
            <div class="card-body details">
                <h2 class="card-title">{{character.name}}</h2>
                <h6 class="card-title gameID">{{gameID}}</h6>

                <div class="card-text text-left">
                    <div class="row">
                        <div class="col-sm-12">
                            <h4>Description</h4>
                        </div>
                        <div class="col-sm-12">
                            <p>{{character.description}}</p>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-sm-12">
                            <h4>Knowledge</h4>
                        </div>
                        <div class="col-sm-12">
                            {{#each knowledge}}
                            <h2 class="float-left m-1">
                                <span class="badge badge-light font-weight-light p-2">{{this}}</span>
                            </h2>
                            {{/each}}
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-sm-12">
                            <h5>Good Characters In Game</h5>
                        </div>
                        <div class="col-sm-12">
                            {{#each goodChars}}
                            <h3 class="float-left m-1">
                                <span class="badge badge-light font-weight-light p-2">{{this}}</span>
                            </h3>
                            {{/each}}
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-sm-12">
                            <h5>Evil Characters In Game</h5>
                        </div>
                        <div class="col-sm-12">
                            {{#each evilChars}}
                            <h3 class="float-left m-1">
                                <span class="badge badge-light font-weight-light p-2">{{this}}</span>
                            </h3>
                            {{/each}}
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-sm-12 text-center">
                            <h3 class="m-1">
                                <span class="badge badge-outline-light font-weight-light p-2 result" style="margin: 0 auto;"></span>
                            </h3>
                        </div>
                        <div class="col-sm-12 text-center">
                            <button type="submit" class="btn btn-light restart d-none" style="margin: 0 auto;">

                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-5 ml-auto lobby-parent">
        <div class="card text-center text-white bg-dark mb-3" style="width: 20rem; margin: 0 auto;">
            <div class="card-body quests-parent">
                <h3 class="card-title">Quests</h3>
                <div class="quests">
                    <div class="completed-quests"></div>
                    <div class="empty-quests"></div>
                </div>
            </div>
        </div>
    </div>
</div>