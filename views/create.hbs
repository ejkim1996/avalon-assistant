<div class="card text-center text-white bg-dark mb-3" style="width: 20rem; margin: 0 auto;">
    <div class="card-body">
        <h3 class="card-title">Set Game Details:</h3>
        <form method="POST">
            <div class="form-group row">
                <div class="col-sm-1"></div>
                <div class="col-sm-10">
                    <label for="gameID">
                        Enter Game Name:
                    </label>
                    <input name="gameID" type="text" class="form-control form-control-lg" id="gameID" placeholder="Game ID">
                </div>
                <div class="col-sm-1"></div>
                <div class="col-sm-12 messages gameIDError" style="color: aquamarine;">
                    {{error}}
                </div>

            </div>
            <div class="form-group row">
                <div class="col-sm-12 mb-2">Characters:</div>
                <div class="col-sm-12">
                    <div class="btn-group-toggle d-inline-block mb-1">
                        <label class="btn btn-outline-light active">
                            <input type="checkbox" autocomplete="off" name="characters" value="Merlin"> Merlin
                        </label>
                    </div>
                    {{#each characters}} {{#if select}} {{else}}
                    <div class="btn-group-toggle d-inline-block mb-1" data-toggle="buttons">
                        <label class="btn btn-outline-light">
                            <input type="checkbox" autocomplete="off" name="characters" value="{{name}}"> {{name}}
                        </label>
                    </div>
                    {{/if}} {{/each}}
                </div>

            </div>
            <div class="form-group row">
                <div class="col-sm-1"></div>
                <label class="col-sm-6 col-form-label pr-0 mr-0" for="numberOfServants">Servant of Arthur</label>
                <div class="col-sm-4">
                    <select class="form-control" id="numberOfServants" name="numberOfServants">
                        <option>0</option>
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                        <option>6</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-1"></div>
                <label class="col-sm-6 col-form-label pr-0 mr-0" for="numberOfMinions">Minion of Mordred</label>
                <div class="col-sm-4">
                    <select class="form-control" id="numberOfMinions" name="numberOfMinions">
                        <option>0</option>
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                        <option>6</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-1"></div>
                <div class="col-sm-10">
                    <input name="numberOfCharacters" type="text" class="form-control form-control-lg d-none" id="numberOfCharacters" placeholder="Number of Characters">
                </div>
                <div class="col-sm-1"></div>
                <div class="col-sm-12 messages" style="color:aquamarine"></div>
            </div>

            <button type="submit" class="btn btn-light">
                Create Game
            </button>
        </form>
    </div>
</div>
<script src="//cdnjs.cloudflare.com/ajax/libs/validate.js/0.12.0/validate.min.js"></script>
<script src="/createValidate.js"></script>