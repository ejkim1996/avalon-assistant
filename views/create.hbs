

<div class="card text-center text-white bg-dark mb-3 w-100" style="width: 18rem;">
    <div class="card-body">
        <h3 class="card-title">Choose Characters:</h3>
        <form method="POST">
            <div class="form-group row">
                <div class="col-sm-1"></div>
                <div class="col-sm-5">Characters:</div>
                <div class="col-sm-6 text-left">
                    {{#each characters}}
                    {{#if select}}
                    {{else}}
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="gridCheck{{@index}}" name="characters" value="{{name}}">
                            <label class="form-check-label" for="gridCheck{{@index}}">
                                {{name}}
                            </label>
                        </div>
                    {{/if}}
                    {{/each}}
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-6 col-form-label text-right" for="numberOfServants">Servant of Arthur</label>
                {{!-- <div class="col-sm-1"></div> --}}
                <div class="col-sm-4">
                    <select class="form-control" id="numberOfServants" name="numberOfServants">
                        <option>0</option>
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                        <option>6</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-6 col-form-label text-right" for="numberOfMinions">Minion of Mordred</label>
                {{!-- <div class="col-sm-1"></div> --}}
                <div class="col-sm-4">
                    <select class="form-control" id="numberOfMinions" name="numberOfMinions">
                        <option>0</option>
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                        <option>6</option>
                    </select>
                </div>
            </div>
        
            <button type="submit" class="btn btn-light">
                Create Game
            </button>
        </form>
    </div>
</div>