<script src="/socket.io/socket.io.js"></script>
<script src="/lobby.js"></script>

<div class="card text-center text-white bg-dark mb-3" style="width: 20rem; margin: 0 auto;">
    <div class="card-body">
        <h3 class="card-title gameID">{{gameID}}</h3>
        <div class="row">
            <div class="col-sm-1 ml-auto"></div>
            <div class="col-sm-10 ml-auto lobby-parent">
                <p class="lead text-center lobby">
                    {{#each players}}
                    <h3 class="float-left m-1">
                        <span class="badge badge-pill badge-primary bg-secondary font-weight-light p-2">{{name}}</span>
                    </h3>
                    {{/each}}
                </p>
            </div>
            <div class="col-sm-1 ml-auto"></div>
        </div>
        <br>
        <button type="submit" class="btn btn-light">
            Play Game
        </button>
    </div>
</div>