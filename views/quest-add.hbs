<div class="card text-center text-white bg-dark mb-3" style="width: 20rem; margin: 0 auto;">
    <div class="card-body">
        <h3 class="card-title">Add a Quest</h3>
        <h5 class="gameID">{{gameID}}</h5>
        <form method="POST">
            <div class="form-group row ml-auto">
                <label class="col-sm-6 col-form-label" for="numberOfPlayers"># of Players</label>
                <div class="col-sm-4">
                    <select class="form-control" id="numberOfPlayers" name="numOfPlayers">
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12 ml-auto mb-1">Players Chosen for Quest</div>
                <div class="col-sm-12 text-center ml-auto playerBtn">
                    {{#each players}}
                    <div class="btn-group-toggle mb-1 d-inline-block" style="margin: 0 auto;" data-toggle="buttons">
                        <label class="btn btn-outline-light">
                            <input type="checkbox" autocomplete="off" name="players" value="{{name}}"> {{name}}
                        </label>
                    </div>
                    {{/each}}
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-1"></div>
                <div class="col-sm-10">
                    <input name="numberOfCharacters" type="text" class="form-control form-control-lg d-none" id="numberOfCharacters" placeholder="Number of Characters">
                </div>
                <div class="col-sm-1"></div>
                <div class="col-sm-12 messages" style="font-size: 0.9em; color:aquamarine"></div>
            </div>
            <fieldset class="form-group">
                <div class="row">
                    <legend class="col-form-label col-sm-12 pt-0">Result</legend>
                    <div class="col-sm-12">
                        <div class="btn-group btn-group-toggle" data-toggle="buttons">
                            <label class="btn btn-outline-light">
                                <input type="radio" name="result" id="gridRadios1" autocomplete="off" value="success"> Success
                            </label>
                            <label class="btn btn-outline-light">
                                <input type="radio" name="result" id="gridRadios2" autocomplete="off" value="fail"> Failure
                            </label>
                        </div>
                    </div>
                    <div class="col-sm-12 messages" style="color:aquamarine"></div>
                </div>
            </fieldset>

            <button type="submit" class="btn btn-light">
                Add
            </button>
            <a class="btn btn-light" href="/game/play/{{gameSlug}}" role="button">
                Back to Game
            </a>
        </form>
    </div>
</div>

<div class="card text-center text-white bg-dark mb-3" style="width: 20rem; margin: 0 auto;">
    <div class="card-body">
        <h5 class="card-title">Number of Players Per Mission</h5>
        <img src="/playersPerMission.png" alt="" style="width: 100%;">
        <p>Missions marked with an asterisk (*) require two fail cards to be played in order for the mission to fail.</p>
    </div>
</div>
<script src="//cdnjs.cloudflare.com/ajax/libs/validate.js/0.12.0/validate.min.js"></script>
<script src="/addQuestValidate.js"></script>